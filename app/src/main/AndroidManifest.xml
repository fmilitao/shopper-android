<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.blah.shopper" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >


        <activity android:name=".ShopsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- TODO check "singleInstance" or "singleTop" ? avoids double launching activity. -->
        <!-- TODO setOnClickListener(null) onResume() restore it-->
        <!-- TODO intent.setFlags(Intent.FLAG_ACTIVITY_CLEAR_TOP); -->
        <activity
            android:name=".ProductsActivity"
            android:label="List Detail"
            android:launchMode="singleTop"
            android:parentActivityName=".ShopsActivity" >
        </activity>

    </application>

</manifest>
